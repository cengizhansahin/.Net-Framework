@model IEnumerable<Category>


<h1 class="text-center mb-3">Kategoriler Sayfası</h1>
<a asp-controller="Category" asp-action="Create" class="btn btn-success mb-2">Create a New Category</a>
<table class="table table-bordered table-primary table-striped table-hover w-100 m-auto">
    <thead>
        <tr>
            <th>CategoryName</th>
            <th>Category Display Order</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">@item.Name</td>
                <td width="30%">@item.DisplayOrder</td>
                <td>
                    <div class="btn-group">
                        <!-- normal şartlarda asp-action bizi istediğimiz actiona asp-controller bizi istediğimiz controller'a yönlendirirken yeni eklediğimiz asp-route-id özelliği aspnet projelerinde bir detay sayfasına yönlendirme yapmak istediğimizde kullanılan rout özelliklerindeki opsiyonel ID alanına bizi yönlendiren bir helper''dır. Bir butona veya a etiketine bu özelliği ekleyerek kendisini /controller/action/?id alanına yönlendirmekteyiz. /Category/Edit/123 -->
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-success"><i class="bi bi-pencil-square"></i>Edit</a>
                        @* <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-pencil-square"></i>Remove</a> *@
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.ID" class="btn btn-danger"><i class="bi bi-pencil-square"></i>Remove</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>
</table>

