@model List<Course>
  <h1>Kurslar Listesi</h1>
  @foreach(var item in Model){
  <div id="kurs_@item.Id" class="card mb-3">
    <div class="row p-4">
      <div class="col-md-4">
        <img
          src="~/img/@item.Image"
          width="200"
          alt=""
          class="img-fluid rounded-start"
        />
      </div>
      <div class="col-md-8">
        <h1 class="card-title">@item.Title</h1>
        <p class="card-text">@item.Description</p>
      </div>
    </div>
  </div>
  }
</Course>
