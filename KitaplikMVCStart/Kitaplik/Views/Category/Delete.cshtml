@model Category
@{
}
<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input disabled asp-for="Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder">Display Order</label>
            <input disabled asp-for="DisplayOrder" type="number" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="col-6 text-center">
                <a asp-controller="Category" asp-action="Index">Back to Category</a>
            </div>
        </div>
    </div>
</form>
